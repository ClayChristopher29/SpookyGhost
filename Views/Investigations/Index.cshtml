@model IEnumerable<Ghost.Models.Investigation>

@{
    ViewData["Title"] = "Index";
}

<h1>Your Investigations</h1>

<p>
    <a asp-action="Create">New Investigation</a>
</p>

<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th @Html.DisplayNameFor(model => model.Date)</th>
            <th @Html.DisplayNameFor(model => model.Location.Name)
            </th>
            <th @Html.DisplayNameFor(model => model.isPrivate)
 </th>
</thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Location.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.isPrivate)
                </td>
                <td>
                    <button type="button" class="btn btn-outline-dark"><a asp-action="Edit" asp-route-id="@item.Id">Edit</a></button>
                    <button type="button" class="btn btn-outline-dark"><a asp-action="Details" asp-route-id="@item.Id">Details</a></button>
                    <button type="button" class="btn btn-outline-dark"><a asp-action="Delete" asp-route-id="@item.Id">Delete</a></button>
                </td>
            </tr>
}
    </tbody>
</table>